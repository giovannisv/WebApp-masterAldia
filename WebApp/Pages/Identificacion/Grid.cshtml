@page
@model WebApp.Pages.Identificacion.GridModel
@{
}
<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Identificacion
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bxs-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>IdCedula</th>
                                <th>IdTipoIdentificacion</th>
                                <th>Pasaporte</th>
                                <th>CedulaJuridica</th>
                                <th>Descripcion</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tboby>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.IdCedula</td>
                                <td>@item.IdTipoIdentificacion</td>
                                <td>@item.Pasaporte</td>
                                <td>@item.CedulaJuridica</td>
                                <td>@item.Descripcion</td>
                                
                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdCedula"><i class='bx bx-edit-alt'></i></a>

                                    <button type="button" class="btn btn-danger" onclick="IdentificacionGrid.OnClickEliminar(@item.IdCedula)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>
                            }
                        </tboby>
                    </table>

                </div>
            </div>



        </div>
    </div>


</div>

@section Scripts{

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>

    <script defer src="~/App/Identificacion/Grid.js"></script>

}